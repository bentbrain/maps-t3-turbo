{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:chrome": {
      "dependsOn": ["^build"],
      "outputs": ["dist_chrome"]
    },
    "build:firefox": {
      "dependsOn": ["^build"],
      "outputs": ["dist_firefox"]
    },
    "dev": {
      "persistent": true
    }
  }
}
